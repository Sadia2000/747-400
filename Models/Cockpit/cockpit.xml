        <object-name>cdu.center-screen</object-name>
        <object-name>cdu.fo-screen</object-name>
        <object-name>ap.spd-100</object-name>
        <object-name>ap.spd-10</object-name>
        <object-name>ap.spd-1</object-name>
        <object-name>ap.hdg-100</object-name>
        <object-name>ap.hdg-10</object-name>
        <object-name>ap.hdg-1</object-name>
        <object-name>ap.vs-rate</object-name>
        <object-name>ap.vs-1000</object-name>
        <object-name>ap.vs-100</object-name>
        <object-name>ap.vs-10</object-name>
        <object-name>ap.vs-1</object-name>
        <object-name>ap.alt-10000</object-name>
        <object-name>ap.alt-1000</object-name>
        <object-name>ap.alt-100</object-name>
        <object-name>ap.alt-10</object-name>
        <object-name>ap.alt-1</object-name>
        <object-name>ap.thr-engage</object-name>
        <object-name>ap.spd-engage</object-name>
        <object-name>ap.lnav-engage</object-name>
        <object-name>ap.vnav-engage</object-name>
        <object-name>ap.flch-engage</object-name>
        <object-name>ap.hdg-hold-engage</object-name>
        <object-name>ap.vs-engage</object-name>
        <object-name>ap.alt-hold-engage</object-name>
        <object-name>ap.loc-engage</object-name>
        <object-name>ap.app-engage</object-name>
        <object-name>ap.engageL</object-name>
        <object-name>ap.engageC</object-name>
        <object-name>ap.engageR</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
        </emission>
    </animation>

    <!-- Yokes -->
    <animation>
        <type>rotate</type>
        <property>controls/flight/aileron</property>
        <factor>-88</factor>
        <object-name>ap.discL</object-name>
        <object-name>h-trim.LL</object-name>
        <object-name>h-trim.RL</object-name>
        <object-name>yoke.capt</object-name>
        <center>
            <x-m>-1.0577</x-m>
            <y-m>-0.499815</y-m>
            <z-m>-0.116545</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <property>controls/flight/aileron</property>
        <factor>-88</factor>
        <object-name>ap.discR</object-name>
        <object-name>h-trim.LR</object-name>
        <object-name>h-trim.RR</object-name>
        <object-name>yoke.fo</object-name>
        <center>
            <x-m>-1.0577</x-m>
            <y-m>0.499815</y-m>
            <z-m>-0.116545</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <property>controls/flight/elevator</property>
        <factor>-12.5</factor>
        <object-name>ap.discL</object-name>
        <object-name>h-trim.LL</object-name>
        <object-name>h-trim.RL</object-name>
        <object-name>yoke.capt</object-name>
        <object-name>yoke.column-capt</object-name>
        <object-name>ap.discR</object-name>
        <object-name>h-trim.LR</object-name>
        <object-name>h-trim.RR</object-name>
        <object-name>yoke.fo</object-name>
        <object-name>yoke.column-fo</object-name>
        <center>
            <x-m>-1.11248</x-m>
            <y-m>0</y-m>
            <z-m>-0.90859</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ap.discL</object-name>
        <object-name>ap.discR</object-name>
        <object-name>ap.disengage</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/autopilot/settings/disengaged</property>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("it-autoflight/input/ap1", 0);
                    setprop("it-autoflight/input/athr", 0);
                </script>
            </binding>
        </action>
    </animation>

