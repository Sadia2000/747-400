<PropertyList>
    <path>cockpit.ac</path>
    <main include="CDU.xml" omit-node="y"/>

    <!-- Default Illumination -->
    <animation>
        <type>material</type>
        <object-name>screen.pfd-capt</object-name>
        <object-name>screen.nav-capt</object-name>
        <object-name>screen.eicas</object-name>
        <object-name>screen.nav-fo</object-name>
        <object-name>screen.pfd-fo</object-name>
        <object-name>screen.mfd</object-name>
        <object-name>cdu.capt-screen</object-name>
        <object-name>cdu.center-screen</object-name>
        <object-name>cdu.fo-screen</object-name>
        <object-name>ap.spd-100</object-name>
        <object-name>ap.spd-10</object-name>
        <object-name>ap.spd-1</object-name>
        <object-name>ap.hdg-100</object-name>
        <object-name>ap.hdg-10</object-name>
        <object-name>ap.hdg-1</object-name>
        <object-name>ap.vs-rate</object-name>
        <object-name>ap.vs-1000</object-name>
        <object-name>ap.vs-100</object-name>
        <object-name>ap.vs-10</object-name>
        <object-name>ap.vs-1</object-name>
        <object-name>ap.alt-10000</object-name>
        <object-name>ap.alt-1000</object-name>
        <object-name>ap.alt-100</object-name>
        <object-name>ap.alt-10</object-name>
        <object-name>ap.alt-1</object-name>
        <object-name>ap.thr-engage</object-name>
        <object-name>ap.spd-engage</object-name>
        <object-name>ap.lnav-engage</object-name>
        <object-name>ap.vnav-engage</object-name>
        <object-name>ap.flch-engage</object-name>
        <object-name>ap.hdg-hold-engage</object-name>
        <object-name>ap.vs-engage</object-name>
        <object-name>ap.alt-hold-engage</object-name>
        <object-name>ap.loc-engage</object-name>
        <object-name>ap.app-engage</object-name>
        <object-name>ap.engageL</object-name>
        <object-name>ap.engageC</object-name>
        <object-name>ap.engageR</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
        </emission>
    </animation>

    <!-- Yokes -->
    <animation>
        <type>rotate</type>
        <property>controls/flight/aileron</property>
        <factor>-88</factor>
        <object-name>ap.discL</object-name>
        <object-name>h-trim.LL</object-name>
        <object-name>h-trim.RL</object-name>
        <object-name>yoke.capt</object-name>
        <center>
            <x-m>-1.0577</x-m>
            <y-m>-0.499815</y-m>
            <z-m>-0.116545</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <property>controls/flight/aileron</property>
        <factor>-88</factor>
        <object-name>ap.discR</object-name>
        <object-name>h-trim.LR</object-name>
        <object-name>h-trim.RR</object-name>
        <object-name>yoke.fo</object-name>
        <center>
            <x-m>-1.0577</x-m>
            <y-m>0.499815</y-m>
            <z-m>-0.116545</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <property>controls/flight/elevator</property>
        <factor>-12.5</factor>
        <object-name>ap.discL</object-name>
        <object-name>h-trim.LL</object-name>
        <object-name>h-trim.RL</object-name>
        <object-name>yoke.capt</object-name>
        <object-name>yoke.column-capt</object-name>
        <object-name>ap.discR</object-name>
        <object-name>h-trim.LR</object-name>
        <object-name>h-trim.RR</object-name>
        <object-name>yoke.fo</object-name>
        <object-name>yoke.column-fo</object-name>
        <center>
            <x-m>-1.11248</x-m>
            <y-m>0</y-m>
            <z-m>-0.90859</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ap.discL</object-name>
        <object-name>ap.discR</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/autopilot/settings/disengaged</property>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("it-autoflight/input/ap1", 0);
                    setprop("it-autoflight/input/athr", 0);
                </script>
            </binding>
        </action>
    </animation>

    <!-- Analog Instruments -->
    <animation>
        <type>rotate</type>
        <object-name>stdby.ai</object-name>
        <property>orientation/pitch-deg</property>
        <center>
            <x-m>-1.50119</x-m>
            <y-m>-0.144811</y-m>
            <z-m>-0.031761</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>stdby.ai</object-name>
        <property>orientation/roll-deg</property>
        <center>
            <x-m>-1.50119</x-m>
            <y-m>-0.144811</y-m>
            <z-m>-0.031761</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <!-- Mulit-Function Display -->
    <animation>
        <type>pick</type>
        <object-name>mfd.eng</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/eicas/display</property>
                <value type="string">ENG</value>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>mfd.stat</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/eicas/display</property>
                <value type="string">STAT</value>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>mfd.elec</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/eicas/display</property>
                <value type="string">ELEC</value>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>mfd.fuel</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/eicas/display</property>
                <value type="string">FUEL</value>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>mfd.ecs</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/eicas/display</property>
                <value type="string">ECS</value>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>mfd.hyd</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/eicas/display</property>
                <value type="string">HYD</value>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>mfd.drs</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/eicas/display</property>
                <value type="string">DRS</value>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>mfd.gear</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/eicas/display</property>
                <value type="string">GEAR</value>
            </binding>
        </action>
    </animation>

    <!-- Glareshield -->
    <!-- EFIS Panel, Left -->
    <animation>
        <type>pick</type>
        <object-name>efis.mins-modeL</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>instrumentation/efis[0]/inputs/minimums/mins-mode</property>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>efis.mins-modeL</object-name>
        <property>controls/switches/efis[0]/mins-mode</property>
        <factor>-60</factor>
        <center>
            <x-m>-1.15153</x-m>
            <y-m>-0.362841</y-m>
            <z-m>0.178918</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>efis.mins-setL</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/efis[0]/inputs/minimums/mins-altitude</property>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>efis.mins-setL</object-name>
        <property>controls/switches/efis[0]/mins-altitude</property>
        <factor>45</factor>
        <center>
            <x-m>-1.15153</x-m>
            <y-m>-0.362841</y-m>
            <z-m>0.178918</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>efis.baro-modeL</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>instrumentation/efis[0]/inputs/baro/mode</property>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>efis.baro-modeL</object-name>
        <property>controls/switches/efis[0]/baro-mode</property>
        <factor>-60</factor>
        <center>
            <x-m>-1.16077</x-m>
            <y-m>-0.277159</y-m>
            <z-m>0.178918</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>efis.mins-rstL</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/efis[0]/inputs/minimums/mins-altitude</property>
                <value>250</value>
            </binding>
        </action>
    </animation>
</PropertyList>